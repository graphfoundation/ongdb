<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <artifactId>ono-cypher-parent</artifactId>

  <build>
    <plugins>
      <plugin>
        <artifactId>scalastyle-maven-plugin</artifactId>
        <configuration>
          <configLocation>checkstyle/scalastyle_config.xml</configLocation>
          <failOnViolation>false</failOnViolation>
          <failOnWarning>false</failOnWarning>
          <includeTestSourceDirectory>false</includeTestSourceDirectory>
          <inputEncoding>UTF-8</inputEncoding>
          <skip>true</skip>
          <sourceDirectory>${project.basedir}/src/main/scala</sourceDirectory>
          <testSourceDirectory>${project.basedir}/src/test/scala</testSourceDirectory>
          <verbose>false</verbose>
        </configuration>
        <dependencies>

          <dependency>
            <artifactId>scalastyle-maven-plugin</artifactId>
            <groupId>org.scalastyle</groupId>
            <version>1.0.0</version>
          </dependency>
          <dependency>
            <artifactId>build-resources</artifactId>
            <groupId>org.neo4j.build</groupId>
            <version>${project.version}</version>
          </dependency>
        </dependencies>
        <executions>
          <execution>
            <goals>
              <goal>check</goal>
            </goals>
          </execution>
        </executions>
        <groupId>org.neo4j</groupId>
        <version>1.1.1</version>
      </plugin>
    </plugins>
  </build>
  <dependencies>


    <dependency>
      <artifactId>neo4j-cypher</artifactId>
      <groupId>org.neo4j</groupId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>
  <groupId>io.github.onograph</groupId>
  <modelVersion>4.0.0</modelVersion>
  <name>ONOGRAPH - Cypher</name>
  <packaging>pom</packaging>


  <parent>
    <artifactId>cypher-parent</artifactId>
    <groupId>org.neo4j</groupId>
    <version>4.3.1-SNAPSHOT</version>
  </parent>


  <profiles>
    <profile>
      <activation>
        <property>
          <name>!skipCypher</name>
        </property>
      </activation>
      <id>include-cypher</id>
      <modules>


        <module>cypher</module>
      </modules>
    </profile>
  </profiles>

  <properties>


    <checkstyle.skip>true</checkstyle.skip>
  </properties>

  <version>4.3.1-SNAPSHOT</version>
</project>
