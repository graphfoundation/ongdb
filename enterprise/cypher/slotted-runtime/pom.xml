        </dependency>

        <dependency>
            <groupId>org.graphfoundation.ongdb</groupId>
            <artifactId>ongdb-cypher-planner-3.6</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- neo4j-cypher test -->

        <dependency>
            <groupId>org.graphfoundation.ongdb</groupId>
