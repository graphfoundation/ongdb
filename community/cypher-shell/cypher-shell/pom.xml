    <dependencies>


        <!-- Neo4j dependencies -->

        <dependency>
            <groupId>org.graphfoundation.ongdb</groupId>
            <artifactId>ongdb-cypher-expression-evaluator</artifactId>
            <version>${project.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>org.graphfoundation.ongdb</groupId>
                    <artifactId>ongdb-index</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.graphfoundation.ongdb</groupId>
                    <artifactId>ongdb-lucene-upgrade</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.graphfoundation.ongdb</groupId>
                    <artifactId>ongdb-lucene-index</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.graphfoundation.ongdb</groupId>
                    <artifactId>ongdb-ssl</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.graphfoundation.ongdb</groupId>
                    <artifactId>ongdb-graph-algo</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.graphfoundation.ongdb</groupId>
                    <artifactId>ongdb-io</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.graphfoundation.ongdb</groupId>
                    <artifactId>ongdb-csv</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.graphfoundation.ongdb</groupId>
                    <artifactId>ongdb-configuration</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.graphfoundation.ongdb</groupId>
                    <artifactId>ongdb-collections</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.graphfoundation.ongdb</groupId>
                    <artifactId>ongdb-diagnostics</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.graphfoundation.ongdb</groupId>
                    <artifactId>ongdb-resource</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.graphfoundation.ongdb</groupId>
                    <artifactId>ongdb-annotation-processors</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.graphfoundation.ongdb</groupId>
                    <artifactId>ongdb-spatial-index</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.graphfoundation.ongdb</groupId>
                    <artifactId>ongdb-native</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.graphfoundation.ongdb</groupId>
                    <artifactId>ongdb-logging</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.graphfoundation.ongdb</groupId>
                    <artifactId>ongdb-procedure-api</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.logging.log4j</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.lucene</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.neo4j.driver</groupId>
            <artifactId>neo4j-java-driver</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.graphfoundation.ongdb</groupId>
            <artifactId>cypher-literal-interpreter</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.graphfoundation.ongdb</groupId>
            <artifactId>ongdb-cypher-javacc-parser</artifactId>
            <version>${project.version}</version>
        </dependency>


        <!-- Other dependencies -->

        <dependency>
            <groupId>net.sourceforge.argparse4j</groupId>
